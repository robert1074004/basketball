<div class="container-fluid mt-3">
    <div class="mx-auto" style="width:800px;height:400px; border:solid 3px tomato;">
        <h3 class="text-center my-2">球員生涯比賽數據</h3>
        <a class="btn btn-primary btn-sm ms-2 mb-1" href="/basketball/form">add record</a>
        <table class="table table-hover">
            <thead>
                <tr>
                <th scope="col">date</th>
                <th scope="col">PTS</th>
                <th scope="col">FGA</th>
                <th scope="col">FTA</th>
                <th scope="col">FGM</th>
                <th scope="col">3PM</th>
                <th scope="col">TOV</th>
                <th scope="col">Efg%</th>
                <th scope="col">Ts%</th>
                <th scope="col">Tov%</th>
                <th scope="col"></th>
                
                </tr>
            </thead>
            <tbody>
                {{#each records}}
                <tr>
                <th scope="row">{{this.date}}</th>
                <td>{{this.PTS}}</td>
                <td>{{this.FGA}}</td>
                <td>{{this.FTA}}</td>
                <td>{{this.FGM}}</td>
                <td>{{this.THREE_PM}}</td>
                <td>{{this.TOV}}</td>
                <td>{{this.efg}}</td>
                <td>{{this.ts}}</td>
                <td>{{this.to_v}}</td>
                <td class="d-flex justify-content-evenly">
                    <a class="btn btn-primary btn-sm">edit</a>
                    <a class="btn btn-primary btn-sm">delete</a>
                </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>