<div class="container-fluid mt-3">
    <div class="mx-auto" id = "record_panel">
        <h3 class="text-center my-2">單場比賽數據</h3>
        <a class="btn btn-primary btn-sm ms-2 mb-1" href="/basketball/form">add record</a>
        <p class="ms-2 my-3">* Efg%(有效命中率) Ts%(真實命中率) Tov%(失誤率)</p>
        <table class="table table-hover mt-3" id="record_table" >
            <thead>
                <tr>
                <th scope="col">date</th>
                <th scope="col">Efg%</th>
                <th scope="col">Ts%</th>
                <th scope="col">Tov%</th>
                <th scope="col"></th>
                
                </tr>
            </thead>
            <tbody>
                {{#each records}}
                <tr>
                <th scope="row">{{this.date}}</th>
                <td>{{this.efg}}%</td>
                <td>{{this.ts}}%</td>
                <td>{{this.to_v}}%</td>
                <td  id="button_panel">
                    <a class="btn btn-primary btn-sm" href="/basketball/form/edit/{{this.id}}" id="button_edit">edit</a>
                    <form action="/basketball/record/{{this.id}}?_method=DELETE" method="POST">
                    <button class="btn btn-primary btn-sm" type="submit" onclick="return confirm(`確定要刪除此數據?`);">delete</button>
                    </form>
                </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <nav class="mt-3" aria-label="page navigation">
        <ul class="pagination">
            <li class="page-item {{#ifCond pagination.currentPage 1}}disabled{{/ifCond}}">
                <a class="page-link" href="?page={{pagination.prev}}"
                    aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            {{#each pagination.pages}}
            {{#ifCond this ../pagination.currentPage}}
            <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
            {{else}}
            <li class="page-item">
                <a class="page-link" href="?page={{this}}">{{this}}</a>
            </li>
            {{/ifCond}}
            {{/each}}
            <li class="page-item {{#ifCond pagination.currentPage pagination.totalPage}}disabled{{/ifCond}}">
                <a class="page-link" href="?page={{pagination.next}}"
                    aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
    </div>
</div>